.countries__content__blocks
	&__item__russia, 
	&__item__norway,
	&__item__norway_culture,
	&__item__china, 
	&__item__india, 
	&__item__japan, 
	&__item__new-zealand,
	&__item__new-zealand_culture
		position relative
		display inline-block
		float left
		margin-left 20px			
		width 300px
		height 200px
		
		@media (max-width: 639px)
			@media (min-width: 320px)
				margin-left 0
				margin-top 20px					
		
		&__one
			//display none
			width 100%
			height 100%
			background url('../images/russia.jpg') no-repeat center center
			background-size cover
									
			&__overlay
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				z-index 2
				background rgba(3,21,36,.6)
				
				& h1
					display block
					margin-top 89px
					font 32px/17px 'NewBaskervilleC', sans-serif
					color #fff 
					text-align center				

		&__first
			position absolute
			bottom 20px
			right 20px
			z-index 3
			
			& .prev
				display inline-block
				width 21px
				height 21px
				opacity .15
				margin-right 15px					
				background url('../images/prev_slide.svg') no-repeat
				cursor pointer
				
				&:hover
					opacity .3
				
			& .next
				display inline-block
				width 21px
				height 21px
				opacity .15									
				background url('../images/next_slide.svg') no-repeat
				cursor pointer
				
				&:hover
					opacity .3		

	&__item__norway		
		margin-top 20px		
		
		&__one
			background url('../images/norway.jpg') no-repeat center center
			background-size cover
			
	&__item__norway_culture
		display none
		margin-top 20px	
			
		&__one
