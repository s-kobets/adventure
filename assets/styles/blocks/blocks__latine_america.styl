.countries__content__blocks
	&__item_right		
		display inline-block
		float left
		margin-left 20px
		width 620px		
			
		@media (max-width: 639px)
			@media (min-width: 320px)
				width 300px
				float none
				margin-left 0
				
		@media (max-width: 1259px)
			@media (min-width: 640px)
				float none			
				margin-left 0
		
		&-three
			float left
			width 300px
			
		&-four
			float left
			margin-left 20px
			width 300px
		
		&__latine
			position relative
			display inline-block
			float left			
			width 100%
			height 420px
			text-align left 
			
			@media (max-width: 1239px)
				@media (min-width: 320px)
					margin-top 18px			
			
			&__one
				//display none
				width 100%
				height 100%
				background url('../images/latine_america.jpg') no-repeat center 30%
				background-size cover
								
				&__overlay
					position absolute
					top 0
					left 0
					width 100%
					height 100%
					z-index 2
					background rgba(3,21,36,.6)
					
					& h1
						display block
						margin-top 89px
						margin-left 35px
						font 32px/17px 'NewBaskervilleC', sans-serif
						color #fff 			
						
					& ul 
						margin-top 40px
						margin-left 35px
						
						& li						
							font 20px/17px 'NewBaskervilleC', sans-serif
							color #fff 	
							
							& + li
								margin-top 33px	
								
@media only screen and (-webkit-min-device-pixel-ratio: 2), 
only screen and (min-moz-device-pixel-ratio: 2), 
only screen and (-o-min-device-pixel-ratio: 2/1), 
only screen and (min-device-pixel-ratio: 2), 
only screen and (min-resolution: 192dpi), 
only screen and (min-resolution: 2dppx)			
	.countries__content__blocks__item_right__one
		background url('../images/latine_america@2x.jpg') no-repeat center 30%