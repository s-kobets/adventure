.header
	width 100%
	height 80px
	background #282a2d
	
	&:hover
		background #22539d
	
	&__content
		width 87.5%	
		height 100%	
		margin 0 auto
		vertical-align center
		
		@media (min-width: 1280px)
			width 1260px
			
		@media (max-width: 320px)
			width 300px	
		
		&__wrapper__logo 
			display inline-block
			float left
			margin-top 12px	
			width 40px
			height 55px
			background url('../images/logo.svg') no-repeat			
		
		&__wrapper__text
			display inline-block
			float left	
			margin-top 25px
			margin-left 20px
		
			& h1
				font 32px/17px 'NewBaskervilleC', sans-serif
				color #fff	
			
			& h3
				margin-top 3.5px
				font 11px/16px 'PTSansRegular', sans-serif
				color #676b71
				