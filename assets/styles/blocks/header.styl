.header
	width 100%
	height 80px
	background #282a2d
	
	/*&:hover
		background #22539d*/
	
	&__content
		width 87.5%	
		height 100%	
		margin 0 auto
		vertical-align center
		
		@media (min-width: 1280px)
			width 1260px
			
		@media (max-width: 320px)
			width 300px	

		&__button
			position absolute
			z-index 9999
			display inline-block
			top 30px
			left 450px
			color #fff
			font-size 18px
			cursor pointer
			text-decoration none
			
			&:after
				content ''
				display block
				height 2px 
				margin-top 2px
				background red
			
			
		
		&__wrapper__logo 
			display inline-block
			float left
			margin-top 12px	
			margin-left 8px
			width 40px
			height 55px
			background url('../images/logo.svg') no-repeat			
		
		&__wrapper__text
			display inline-block
			float left	
			margin-top 25px
			margin-left 20px
		
			& h1
				font 32px/17px 'NewBaskervilleC', sans-serif
				color #fff	
			
			& h3
				margin-top 10px
				font 11px/16px 'PTSansRegular', sans-serif
				color #676b71
				